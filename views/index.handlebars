{{> navs/index}}

<div class="jumbotron">
    <div class="row">
        <div class="col-md-12">
            <h1>Hacker News Scrapper</h1>

        </div>
    </div>
</div>

<div id="articles">
    {{#each articles}}
    <div class="well">
        <div class="row">
            <div class="col col-md-8">
                <h4>{{this.title}}</h4>
                <h5><a href="{{this.link}}">Click to read full article</a></h5>

            </div>
            <div class="col col-md-2">
                <form class="form-inline" action="/api/articles/save/{{this.id}}" method="POST">
                    <button type="submit" class="btn btn-success">Save Article</button>
                </form>
            </div>
            <div class="col col-md-2">
                <form class="form-inline" action="/api/articles/dismiss/{{this.id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-warning">Remove Article</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>